/* pages/appoint/appoint.wxss */

page {
  background-color: #eee;
}

.item {
  height: 100rpx;
  background-color: #fff;
  border-radius: 14rpx;
  box-shadow: 8rpx 8rpx 8rpx #f3f3f3;
  margin-left: 36rpx;
  margin-right: 36rpx;
  border: 1rpx solid #fcfcfc;
  margin-top: 24rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  font-weight: 500;
  position: relative;
}

.item .right-wrapper {
  position: absolute;
  right: 24rpx;
  top: 0rpx;
  color: #8b8b8b;
  display: flex;
  align-self: center;
  height: 100%;
}

.item .left-icon {
  font-size: 34rpx;
  color: #8b8b8b;
  margin-left: 24rpx;
  text-align: center;
}

.item .flex2 {
  display: flex;
  flex-direction: column;
  align-self: center;
  color: #bbb;
  align-content: center;
  text-align: center;
  margin-right: 4rpx;
}

.time-wrapper {
  background-color: #fff;
  border-radius: 14rpx;
  box-shadow: 8rpx 8rpx 8rpx #f3f3f3;
  margin-left: 36rpx;
  margin-right: 36rpx;
  border: 1rpx solid #fcfcfc;
  padding: 24rpx;
}

.week-wrapper {
  font-size: 22rpx;
  color: #8c8c8c;
  text-align: center;
  margin-top: 24rpx;
  margin-left: 36rpx;
  margin-right: 36rpx;
}
.toparrow-wrapper{
  height: 20rpx;
}
.more-text{
  position: relative;
}
.more-text::after{
  background-image: url('data:image/png;base64,');
  background-size: cover;
  position: absolute;
  content: ' ';
  bottom: -30rpx;
  width: 120rpx;
  height:80rpx;
  left: 10rpx;
  background-repeat: no-repeat;
  
}